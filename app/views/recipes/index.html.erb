<h1>All Recipes</h1>
  <h4>Search by Ingredients:</h4>
  <%= form_tag(recipes_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Ingredients</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |r| %>
      <tr>
        <td><%= r.title %></td>
        <td><%= render r.ingredients %></td>
      </tr>
    <% end %>
  </tbody>
</table>

